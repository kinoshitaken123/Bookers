<h1>Books</h1>

<table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
    </tr>
  </thead>
</table>

<tbody>
   <% books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show", book_path(list.id) %></td>
    <td><%= link_to "edit", edit_book_path(list) %></td>
    <td><%= link_to "destroy", list, "data-confirm" => "Are you sure?" %></td>
  </tr>
</tbody>

<h3>New book</h3>
<% if @book.errors.any? %>
    ul{<% @book.errors.full_messages.each do |message| %>}
<%= form_for(@book) do |f| %>

    <%= f.label :Title %><br/>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %></br>
   <% end %>
  <% end %>
 <% end %>
<% end %>